<?xml version="1.0" encoding="UTF-8"?>

<included>
 <logger name="com.platform.makeyourevent.propertyHandler" level="${makeyourevent.level}" additivity="false">
   <appender-ref ref="STDOUT" />
  </logger>

 <logger name="org.springframework" level="${org.springframework.level}" additivity="false">
   <appender-ref ref="STDOUT" />
  </logger>

  <!-- Strictly speaking, the level attribute is not necessary since -->
  <!-- the level of the root level is set to DEBUG by default.       -->
  <root level="${root.level}">          
    <appender-ref ref="STDOUT" />
  </root> 

</included>